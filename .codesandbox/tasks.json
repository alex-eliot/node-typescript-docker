// https://codesandbox.io/docs/learn/repositories/tasks
{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": ["yarn install"],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "yarn install"
    },
    "start-app": {
      "name": "Run Dev Server",
      "command": "yarn watch",
      "runAtStart": true
    }
  }
}